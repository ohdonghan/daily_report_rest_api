{
    "env": {
        "es6":true,
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "extends": ["eslint:all","prettier"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "max-lines": "off",
        "quotes": [2, "single", "avoid-escape"],
        "semi": "error",
        "camelcase": "off",
        "vars-on-top": "off",
        "one-var": "off",
        "sort-keys": "off",
        "sort-imports": "off",
        "sort-vars": "off",
        "max-statements": "off",
        "no-magic-numbers": "off",
        "require-atomic-updates": "off",
        "max-lines-per-function": "off",
        "no-useless-escape": "off",
        "no-invalid-this": "off",
        "func-names": "off",
        "new-cap": "off",
        "object-shorthand": "off",
        "prefer-destructuring": "off",
        "max-params": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "no-continue": "off",
        "no-ternary": "off",
        "no-prototype-builtins": "off",
        "no-underscore-dangle": "off",
        "no-duplicate-imports": "off",
        "max-depth": "off",
        "capitalized-comments": "off",
        "no-inline-comments": "off",
        "line-comment-position": "off",
        "spaced-comment": ["error", "always", {
            "line": {
                "markers": ["/"],
                "exceptions": ["-", "+"]
            },
            "block": {
                "markers": ["!"],
                "exceptions": ["*"],
                "balanced": true
            }
        }]
    }
}
